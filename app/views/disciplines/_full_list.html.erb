<%
  user ||= nil
  resume ||= nil
  disciplines ||= nil
%>
<table>
    <tr>
        <th class="d40">
            <%= render :partial => 'shared/sortable_link', :locals => { :header => 'Title', :column_name => 'title' } %>
        </th>
        <th class="d40">
            Skills
        </th>
    </tr>

    <% disciplines.each do |discipline| %>
        <tr>
            <td>
                <%= render :partial => 'disciplines/link_to_discipline', :locals => { :user => user, :resume => resume, :discipline => discipline } %>
            </td>
            <td>
                <%= discipline.skill_count %>
            </td>
        </tr>
    <% end %>
</table>
<% if is_user_match? %>
    <a href="<%= new_discipline_path(user) %>" class="link-to-editable" title="Add a new discipline">Add discipline</a>
<% end %>