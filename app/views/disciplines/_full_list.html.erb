<table>
    <tr>
        <% if !current_user.nil? %>
            <th class="d10">
                <%= render :partial => 'shared/sortable_link', :locals => { :header => 'ID', :column_name => 'id' } %>
            </th>
        <% end %>
        <th class="d40">
            <%= render :partial => 'shared/sortable_link', :locals => { :header => 'Title', :column_name => 'title' } %>
        </th>
    </tr>

    <% @disciplines.each do |discipline| %>
        <tr>
            <% if !current_user.nil? %>
                <td><%= discipline.id %></td>
            <% end %>
            <td>
                <%= render :partial => 'disciplines/link_to_discipline', :locals => { :discipline => discipline } %>
            </td>
        </tr>
    <% end %>
</table>