<%
   highlights ||= nil
   user ||= nil
   resume ||= nil
%>
<ul class="highlight-list">
    <% highlights.each do |highlight| %>
        <li>
            <em><%= render :partial => 'skills/link_to_skill', :locals => {:skill => highlight.skill, :user => user, :resume => resume} %></em>:
            <%= decode(highlight.description) %>
        </li>
    <% end %>
</ul>