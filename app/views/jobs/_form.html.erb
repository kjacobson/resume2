<%= form_for @job, :url => @url do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="field">
        <label for="job_title">Title (required)</label><br />
        <input type="text" id="job_title" name="job[title]" placeholder="e.g. Lead Interaction Designer" value="<%= @job.title %>" />
    </div>
    <div class="field">
        <label for="job_employer">Employer/Client</label><br />
        <input type="text" id="job_employer" name="job[employer]" placeholder="e.g. Groogle, Inc." value="<%= @job.employer %>" />
    </div>
    <div class="field">
        <%= f.label :status, "Employment status" %><br />
        <select id="job_status" name="job[status]">
            <% Job.status_options.each do |status| %>
                <option value="<%= status %>" <%= 'selected' if status == @job.status %>><%= status %></option>
            <% end %>
        </select>
    </div>
    <div class="field">
        <label for="job_project">Project</label><br />
        <input type="text" id="job_project" name="job[project]" placeholder="e.g. Secret Encryption Algorithm" value="<%= @job.project %>" />
    </div>
    <div class="field">
        <label for="job_url">URL</label><br />
        <input type="url" id="job_url" name="job[url]" value="<%= @job.url %>" />
    </div>
    <div class="field">
        <label for="job_start_month">Start date</label><br />
        <select id="job_start_month" name="job[start_month]">
            <% Job.months_as_text[1..12].each_with_index do |val, i| %>
                <option <%= 'selected="selected"' if @job.start_month == i+1 %> value="<%= i+1 %>"><%= val %></option>
            <% end %>
        </select>
        <%= select_year((!@job.start_year.nil? ? @job.start_year : Time.now.year - 1), {:start_year => (!@job.start_year.nil? ? @job.start_year - 5 : Time.now.year - 20), :end_year => Time.now.year}, {:name => 'job[start_year]', :id => 'job_start_year'}) %>
    </div>
    <div class="field">
        <label for="job_end_month">End date</label><br />
        <select id="job_end_month" name="job[end_month]">
            <% Job.months_as_text[0..12].each_with_index do |val, i| %>
                <option <%= 'selected="selected"' if @job.end_month == i %> value="<%= i %>"><%= val %></option>
            <% end %>
        </select>
        <%= select_year((!@job.end_year.nil? ? @job.end_year : Time.now.year), {:start_year => (!@job.end_year.nil? ? @job.end_year - 5 : Time.now.year - 20), :end_year => Time.now.year}, {:name => 'job[end_year]', :id => 'job_end_year'}) %>
    </div>
    <div class="field">
        <label for="job_short_desc">Short description</label><br />
        <textarea cols="60" rows="5" id="job_short_desc" name="job[short_desc]"><%= @job.short_desc %></textarea>
    </div>
    <div class="field">
        <label for="job_long_desc">Long description</label><br />
        <textarea cols="60" rows="20" id="job_long_desc" name="job[long_desc]"><%= @job.long_desc %></textarea>
    </div>
    <div class="field">
        <label for="job_reason">Reason for leaving</label><br />
        <textarea cols="60" rows="4" id="job_reason" name="job[reason]"><%= @job.reason %></textarea>
    </div>

    <fieldset class="job-skills">
        <h2>Skills</h2>
        <% if @job.skills.count <= 1 %>
            <p class="form-explanation">
                <strong>What skills did you use in this job?</strong>
                Separated by commas. You&rsquo;ll be able to associate these same skills with other jobs, too.
            </p>
        <% end %>
        <!--<label>Allowed characters: A-Z, 0-9, ., -, _, +</label>-->
        <textarea cols="50" rows="4" name="skills" placeholder="e.g. running, jumping, skipping, carpentry"><%= @skills.collect{ |x| x.title }.join(", ") %></textarea>
    </fieldset>

    <fieldset class="job-softwares">
        <h2>Software/tools</h2>
        <% if @job.softwares.count <= 1 %>
            <p class="form-explanation">
                <strong>What tools and software programs (apps, APIs, source control) did you use in this job?</strong>
                Separated by commas. You&rsquo;ll be able to associate these same software with other jobs, too.
            </p>
        <% end %>
        <!--<label>Allowed characters: A-Z, 0-9, ., -, _, +</label>-->
        <textarea cols="50" rows="4" name="softwares" placeholder="e.g. photoshop, excel, illustrator"><%= @softwares.collect{ |x| x.title }.join(", ") %></textarea>
    </fieldset>

    <% if @resumes.count > 0 %>
        <fieldset class="job-resumes">
            <h2>What resumes would you like this job to appear on?</h2>

            <% if @job.resumes.count == 0 %>
                <p class="form-explanation">
                    <strong>This is optional for now</strong>, but no one will see this job until it&rsquo;s assigned to one or more resumes.
                </p>
            <% end %>
            <select multiple name="resume_ids[]">
                <% @resumes.each do |rez| %>
                    <option value="<%= rez.id %>" <%= 'selected' if (@j_resumes and @j_resumes.include?(rez)) or rez == @resume %>><%= rez.title %></option>
                <% end %>
            </select>
        </fieldset>
     <% else %>
        <h2>You haven&rsquo;t created any resumes yet.</h2>
        <p class="form-explanation">
            <strong>This is no big deal</strong>, but no one will see this job until it&rsquo;s assigned to one or more resumes.
            You can <a href="<%= new_resume_path({:user => @user}) %>" rel="internal" target="_blank" title="Create a new resume">create one now</a>
            or later.
        </p>
    <% end %>

    <div class="actions">
        <%= f.submit "Save", :class => "action-button" %>
    </div>
<% end %>
