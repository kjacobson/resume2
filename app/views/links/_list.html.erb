<%
  user ||= nil
  resume ||= nil
%>
<table>
    <tr>
        <th class="d40">URL</th>
        <th class="d30">
            <%= render :partial => 'shared/sortable_link', :locals => { :header => 'Expires', :column_name => 'expiration' } %>
        </th>
        <th class="d30">
            <%= render :partial => 'shared/sortable_link', :locals => { :header => 'Created at', :column_name => 'created_at' } %>
        </th>
    </tr>

    <% links.each do |link| %>
        <tr>
            <td>
                <%= link.url %>
            </td>
            <td>
                <%= link.expiration %>
            </td>
            <td>
                <%= link.created_at %>
            </td>
        </tr>
    <% end %>
</table>