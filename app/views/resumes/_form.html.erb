<%= form_for(@resume) do |f| %>
    <% if @resume.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@resume.errors.count, "error") %> prohibited this resume from being saved:</h2>

            <ul>
                <% @resume.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <label for="job_title">Name your new resume &hellip;</label><br />
        <%= f.text_field :title %>
    </div>

    <% if @jobs.count > 0 %>
        <div class="field">
            <label for="">&hellip; and choose the jobs you want to display on this resume</label><br />
            <select multiple name="resume_jobs" id="resume_jobs">
                <% @jobs.each do |job| %>
                    <option value="<%= job.id %>"><%= job.title %></option>
                <% end %>
            </select>
        </div>
    <% end %>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
