<% content_for :head do %>
    <p id="notice"><%= notice %></p>
<% end %>

<% content_for :main do %>
    <section class="primary">
        <h1><a href="/users/<%= @user.id %>/resumes/<%= @resume.id %>/jobs" rel="internal" title="See all jobs on this resume">Recent Positions/Projects</a></h1>

        <% if @jobs.count >= 1 %>
            <%= render :partial => "jobs/small_list", :locals => {:jobs => @jobs, :user => @user, :resume => @resume} %>
            [&hellip;] <a href="/users/<%= @user.id %>/resumes/<%= @resume.id %>/jobs" rel="internal" title="">See all jobs</a>
        <% end %>

        <br />
        <%= link_to '[Add jobs]', edit_resume_path({:user_id => @user.id, :id => @resume.id}) if is_user_match? %>
    </section>
    <% if @disciplines.count >= 1 or is_user_match? %>
        <section class="secondary">
            <% jobs_count = Job.count %>
            <h1><a href="/users/<%= @user.id %>/resumes/<%= @resume.id %>/disciplines">Disciplines</a></h1>
            <%= render :partial => "disciplines/list", :locals => { :disciplines => @disciplines, :user => @user } %>
        </section>
    <% end %>

    <section class="secondary">
        <h1>
            <a href="/users/<%= @user.id %>/resumes/<%= @resume.id %>/softwares" rel="internal" title="See a list of tools and software applications I've used professionally">Software</a>
        </h1>

        <% if @softwares.count >= 1 %>
            <%= render :partial => "softwares/list", :locals => { :user => @user, :resume => @resume,  :softwares => @softwares, :abbreviated => true } %>
        <% end %>
    </section>

    <section class="secondary extended">
        <h1>
            <a href="/users/<%= @user.id %>/resumes/<%= @resume.id %>/skills" rel="internal" title="See a list of my skills">Skills</a>
        </h1>

        <% if @disciplines and @disciplines.count >= 1 %>
            <%= render :partial => "skills/small_list_by_discipline", :locals => { :user => @user, :resume => @resume, :disciplines => @disciplines, :skills => @uncategorized_skills } %>
        <% elsif @skills.count >= 1 %>
            <% if is_user_match? %>
                <p>
                    <strong>Your skills are orphans!</strong> Giving them disciplines will add some structure and clarity to your resume.
                    <a href="<%= skills_path(@user) %>" rel="internal" title="Organize skills under disciplines.">Right this way.</a>
                </p>
            <% end %>
            <%=  render :partial => "skills/small_list", :locals => { :user => @user, :resume => @resume, :skills => @skills } %>
        <% end %>
    </section>
<% end %>
