<%
  user ||= nil
  resume ||= nil
  skills ||= nil
%>
<table>
    <tr>
        <th class="d40">
            <%= render :partial => 'shared/sortable_link', :locals => { :header => 'Title', :column_name => 'title' } %>
        </th>
        <th class="d40">
            Jobs
        </th>
    </tr>

    <% skills.each do |skill| %>
        <tr>
            <td>
                <%= render :partial => 'link_to_skill', :locals => {:user => user, :resume => resume, :skill => skill } %>
            </td>
            <td>
                <a href="<%= skill_jobs_path({:user_id => user.id, :resume_id => resume.id, :skill_id => skill.id}) %>" rel="internal" title="See all the jobs using this skill">
                    <%= skill.job_count %>
                </a>
            </td>
        </tr>
    <% end %>
</table>