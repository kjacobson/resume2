<%
  user ||= nil
  resume ||= nil
  skills ||= nil
%>
<table>
    <tr>
        <th class="d40">
            <%= render :partial => 'shared/sortable_link', :locals => { :header => 'Title', :column_name => 'title' } %>
        </th>
        <th class="d40">
            Jobs
        </th>
    </tr>

    <% skills.each do |skill| %>
        <tr>
            <td>
                <%= render :partial => 'link_to_skill', :locals => {:user => user, :resume => resume, :skill => skill } %>
            </td>
            <td>
                <% if !resume.nil? %>
                    <a href="<%= resume_skill_jobs_path({:user_id => user.id, :resume_id => resume.id, :skill_id => skill.id}) %>" title="See all the jobs using this skill">
                <% end %>
                    <%= skill.job_count %>
                <% if !resume.nil? %></a><% end %>
            </td>
        </tr>
    <% end %>
</table>

<% if is_user_match? %>
    <a href="<%= new_skill_path(:user_id => user.id) %>" class="link-to-editable" title="">
        Add skills
    </a>
<% end %>