<%
   resume ||= nil
   user ||= nil
   skills ||= nil
%>
<% if !skills.nil? and skills.count > 0 %>
    <ol class="skill-list">
        <% skills.each do |skill| %>
            <li><%= render :partial => 'skills/link_to_skill', :locals => {:user => user, :resume => resume, :skill => skill} %></li>
        <% end %>
    </ol>
<% else %>
    <p>No skills specified</p>
<% end %>