<table>
    <tr>
        <% if @is_admin %>
            <th class="d10">
                <%= render :partial => 'shared/sortable_link', :locals => { :header => 'ID', :column_name => 'id' } %>
            </th>
        <% end %>
        <th class="d40">
            <%= render :partial => 'shared/sortable_link', :locals => { :header => 'Title', :column_name => 'title' } %>
        </th>
    </tr>

    <% @softwares.each do |software| %>
        <tr>
            <% if @is_admin %>
                <td><%= software.id %></td>
            <% end %>
            <td>
                <%= render :partial => 'softwares/link_to_software', :locals => { :software => software, :abbreviated => false } %>
            </td>
        </tr>
    <% end %>
</table>