    <ol class="software-list">
        <% softwares.each do |software| %>
            <li><%= render :partial => 'softwares/link_to_software', :locals => {:software => software} %></li>
        <% end %>
    </ol>
    <% if abbreviated %>
        [&hellip;] <a href="/softwares" rel="internal" title="See all software/tools I&rsquo;ve used professionally">see the whole list</a>
    <% end %>
<% else %>
    No software/tools specified
<% end %>